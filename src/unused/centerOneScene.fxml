<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.immoxz.main.Controller">
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
            <children>
                <RadioButton fx:id="toggleAfterTime" mnemonicParsing="false" onAction="#onToggleButtonOn"
                             text="Zamknij Po">
                    <toggleGroup>
                        <ToggleGroup fx:id="toogleSwitch"/>
                    </toggleGroup>
                </RadioButton>
                <Region HBox.hgrow="ALWAYS"/>
                <TextField fx:id="afterHouSet" onAction="#setTime" prefHeight="25.0" prefWidth="75.0" promptText="H"/>
                <TextField fx:id="afterMinSet" layoutX="97.0" layoutY="10.0" onAction="#setTime" prefHeight="25.0"
                           prefWidth="75.0" promptText="M"/>
                <TextField fx:id="afterSecSet" layoutX="127.0" layoutY="10.0" onAction="#setTime" prefHeight="25.0"
                           prefWidth="75.0" promptText="S"/>
                <Button fx:id="buttonAfterTime" mnemonicParsing="false" onAction="#setTime" text="Ustaw"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <HBox layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
            <children>
                <RadioButton fx:id="toggleOnTime" mnemonicParsing="false" onAction="#onToggleButtonOff"
                             text="Zamknij o godzinie" toggleGroup="$toogleSwitch">
                </RadioButton>
                <Region HBox.hgrow="ALWAYS"/>
                <TextField fx:id="hSet" prefHeight="25.0" prefWidth="75.0" promptText="H"/>
                <TextField fx:id="mSet" layoutX="97.0" layoutY="10.0" prefHeight="25.0" prefWidth="75.0"
                           promptText="M"/>
                <TextField fx:id="sSet" layoutX="127.0" layoutY="10.0" prefHeight="25.0" prefWidth="75.0"
                           promptText="S"/>
                <Button fx:id="onTimeButton" mnemonicParsing="false" text="Ustaw"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <HBox layoutX="10.0" layoutY="110.0" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
            <children>
                <Label text="Przewidziane zamkniÄ™cie systemu o: "/>
                <Label fx:id="curTime" text="Label"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button mnemonicParsing="false" onAction="#okButtonClicked" text="Zatwierdz"/>
                <Button layoutX="96.0" layoutY="20.0" mnemonicParsing="false" onAction="#cancelButtonClicked"
                        text="Cancel"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </children>
</VBox>
