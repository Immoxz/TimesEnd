<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="movieVbox" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.immoxz.main.Controller">
    <children>
      <HBox spacing="10.0">
         <children>
            <Label text="Podaj ściezke do pliku z filmem:">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
        <HBox spacing="10.0">
            <children>
                <TextField fx:id="filePathText" alignment="TOP_LEFT" prefHeight="25.0" promptText="File Path" HBox.hgrow="ALWAYS" />
                <Button fx:id="setPathButton" alignment="CENTER" mnemonicParsing="false"  text="Ustaw ścieżke" onAction="#setPathToMovie" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
        <HBox layoutX="10.0" layoutY="110.0" spacing="10.0">
            <children>
                <Label text="Przewidziane zamknięcie systemu o: " />
                <Label fx:id="curTime" text="Label" />
                <Region HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#okButtonClicked" text="Zatwierdz" />
                <Button layoutX="96.0" layoutY="20.0" mnemonicParsing="false" onAction="#cancelButtonClicked" text="Cancel" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </children>
   <padding>
      <Insets bottom="10.0" top="10.0" />
   </padding>
</VBox>
